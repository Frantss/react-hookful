{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "allowBranch": "develop",
      "message": "chore(release): publish",
      "conventionalCommits": true
    },
    "version": {
      "allowBranch": "develop",
      "message": "chore(release): version",
      "conventionalCommits": true
    }
  },
  "ignoreChanges": ["**/*.spec.*", "**/*.md"]
}
