{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "allowBranch": "master",
      "message": "chore(release): publish [skip ci]",
      "conventionalCommits": true
    }
  },
  "ignoreChanges": ["**/*.{spec,test}.*", "**/*.md"]
}
