    "jest": "^25.3.0",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rollup": "^2.32.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.28.0",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3"
